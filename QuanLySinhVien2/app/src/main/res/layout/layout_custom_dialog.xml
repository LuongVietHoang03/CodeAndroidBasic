<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_dialog"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:background="@drawable/backgourndialog"
            android:padding="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Thêm lớp mới"
        android:background="@drawable/backgroud_dialog_topleft_topright"
        android:gravity="center"
        android:textSize="20dp"/>
     <EditText
         android:id="@+id/item_ma_lop"
         android:inputType="text"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:layout_width="match_parent"
         android:background="@drawable/background_input"
         android:hint="Mã Lớp"
         android:padding="17dp"
         />
    <EditText
        android:hint="Tên lớp"
        android:inputType="text"
        android:id="@+id/item_ten_lop"
        android:background="@drawable/background_input"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:padding="17dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btn_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background_input"
            android:alpha="0.4"
            android:text="Xóa trắng"
            android:textSize="14dp"
            />
        <Button
            android:id="@+id/btn_addnew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/backgound_add"
            android:alpha="1"
            android:text="Thêm mới"
            android:textSize="14dp"
            android:onClick="AddNewClass"/>
        
        
        
        
    </LinearLayout>

</LinearLayout>